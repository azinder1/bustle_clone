
<img src={{post.image}}>
<h2>{{post.title}}</h2>
<p>
  {{post.author}}-{{post.category}}
</p>
<p>
  {{post.content}}
</p>
<button {{action 'delete' post}}>Delete</button>

{{#if showEditForm}}
  <h4>Update {{post.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=post.title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=post.author id="author"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=post.category id="category"}}
      </div>

      <div class="form-group">
        <label for="image">Image Link</label>
        {{input value=post.image id="image"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{textarea value=post.content id="content"}} 
      </div>
    </form>
    <button {{action 'edit' post}}>Edit</button>
  </div>
{{else}}
  <button {{action 'showEditForm'}}>Edit</button>
{{/if}}
